{
    "name": "magepack",
    "version": "1.3.0",
    "bin": "./cli.js",
    "repository": "https://github.com/magesuite/magepack.git",
    "author": "creativestyle",
    "license": "OSL-2.0",
    "dependencies": {
        "commander": "^3.0.0",
        "fs-extra": "^8.1.0",
        "lodash.merge": "^4.6.2",
        "lodash.zipobject": "^4.1.3",
        "requirejs": "^2.3.6",
        "stringify-object": "^3.3.0"
    },
    "files": [
        "lib/"
    ],
    "lint-staged": {
        "*.json": [
            "prettier --write",
            "git add"
        ],
        "*.js": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "tabWidth": 4
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "jasmine": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 8
        },
        "rules": {
            "no-console": 0
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^3.0.3",
        "lint-staged": "^9.2.1",
        "prettier": "^1.18.2"
    },
    "optionalDependencies": {
        "puppeteer": "^1.19.0"
    }
}
